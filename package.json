{
  "name": "stoic",
  "version": "0.0.1",
  "description": "AI-powered emotional wellness agent for developers - terminal × desktop联动「情绪-认知-摸鱼」工具",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "doc": "docs",
    "build": "tsc"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build"
  },
  "keywords": [
    "stoic",
    "quote",
    "tui",
    "agent",
    "cli",
    "emotional-wellness",
    "mental-health",
    "developer-tools",
    "ai-agent",
    "productivity",
    "mindfulness",
    "cognitive-behavioral-therapy"
  ],
  "author": "narcilee7",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@ltd/j-toml": "^1.38.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^12.1.0",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "conf": "^13.1.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.7",
    "electron": "^33.3.1",
    "eventemitter3": "^5.0.1",
    "figlet": "^1.8.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.1.0",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "node-notifier": "^10.0.1",
    "ora": "^8.1.0",
    "p-retry": "^6.2.1",
    "p-timeout": "^6.1.4",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.25.11",
    "uuid": "^11.0.3",
    "ws": "^8.18.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^24.9.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/narcilee7/stoic.git"
  },
  "bugs": {
    "url": "https://github.com/narcilee7/stoic/issues"
  },
  "homepage": "https://github.com/narcilee7/stoic#readme"
}
